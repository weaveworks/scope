    "babel-jest": "9.0.3",
    "babel-loader": "6.2.4",
    "babel-preset-es2015": "6.6.0",
    "babel-preset-react": "6.5.0",
    "clean-webpack-plugin": "^0.1.8",
    "css-loader": "0.23.1",
    "eslint": "2.4.0",
    "eslint-config-airbnb": "6.1.0",
    "eslint-loader": "1.3.0",
    "eslint-plugin-jasmine": "1.6.0",
    "eslint-plugin-react": "4.2.2",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "0.8.5",
