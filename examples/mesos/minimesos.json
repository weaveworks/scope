{
  "id": "weave-scope",
  "cpus": 1,
  "mem": 128,
  "instances": 1,
  "constraints": [
    [
      "hostname",
      "UNIQUE"
    ]
  ],
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "weaveworks/scope:1.10.1",
      "network": "HOST",
      "privileged": true,
      "parameters": [
        {
          "key": "pid",
          "value": "host"
        },
        {
          "key": "name",
          "value": "weavescope"
        }
      ]
    },
    "volumes": [
      {
        "containerPath": "/var/run/docker.sock",
        "hostPath": "/var/run/docker.sock",
        "mode": "RW"
      }
    ]
  },
  "args": [
    "--probe.docker",
    "true"
  ],
  "env": {
    "CHECKPOINT_DISABLE": "true"
  },
  "portDefinitions": [
    {
      "port": 4040,
      "protocol": "tcp",
      "name": "http"
    }
  ]
}
